{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@mainPage/*": [
        "mainPage"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@mainSass/*": [
        "src/mainSass/*"
      ],
      "@API/*": [
        "src/API/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@UI/*": [
        "src/UI/*"
      ],
      "@layout/*": [
        "src/layout/*"
      ],
    },
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}